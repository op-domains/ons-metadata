            },
            {
              "trait_type": "BASTARDNESS",
              "value": "FOMBOI BASTARD"
            },
            {
              "trait_type": "TYPE",
              "value": "LARGE"
            }
          ],
          "image": "https://ipfs.io/ipfs/QmRagxjj2No4T8gNCjpM42mLZGQE3ZwMYdTFUYe6e6LMBG"
        }
      },
      "ONSMetadata": {
        "value": {
          "$name": "nick.op",
          "$description": "nick.op, an ONS name.",
          "$attributes": [
            {
              "trait_type": "Created Date",
              "display_type": "date",
              "value": null
            },
            {
              "trait_type": "Length",
              "display_type": "number",
              "value": 4
            },
            {
              "trait_type": "Registration Date",
              "display_type": "date",
              "value": 1580803395000
            },
            {
              "trait_type": "Expiration Date",
              "display_type": "date",
              "value": 1698131707000
            }
          ],
          "name_length": 4,
          "url": "https://app.opname.org/name/nick.op",
          "version": 0,
          "background_image": "https://metadata.opname.org/mainnet/avatar/nick.op",
          "image_url": "https://metadata.opname.org/mainnet/0x57f1887a8BF19b14fC0dF6Fd9B2acc9Af147eA85/0x5d5727cb0fb76e4944eafb88ec9a3cf0b3c9025a4b2f947729137c5d7f84f68f/image"
        }
      }
    },
    "schemas": {
      "AvatarMetadata": {
        "type": "object",
        "properties": {
          "uri": {
            "type": "string",
            "example": "ONS name of avatar holder"
          },
          "is_owner": {
            "type": "string",
            "example": "Ownership verification of NFT"
          },
          "host_meta": {
            "type": "object",
            "properties": {
              "chain_id": {
                "type": "string",
                "example": "Chain ID where NFT resides"
              },
              "namespace": {
                "type": "string",
                "example": "Type of NFT contract"
              },
              "contract_address": {
                "type": "string",
                "example": "Contract address of NFT"
              },
              "token_id": {
                "type": "string",
                "example": "Token ID of NFT"
              },
              "reference_url": {
                "type": "string",
                "example": "Marketplace URL of NFT"
              }
            }
          },
          "name": {
            "type": "string",
            "example": "Name of NFT"
          },
          "description": {
            "type": "string",
            "example": "Description of NFT"
          },
          "attributes": {
            "type": "string",
            "example": "Attributes of NFT"
          },
          "image": {
            "type": "string",
            "example": "Image data/URL of NFT"
          },
          "image_url": {
            "type": "string",
            "example": "Image data/URL of NFT"
          },
          "image_data": {
            "type": "string",
            "example": "Image data of NFT"
          },
          "background_color": {
            "type": "string",
            "example": "Background color of NFT"
          },
          "youtube_url": {
            "type": "string",
            "example": "Youtube URL of NFT"
          }
        },
        "required": [
          "uri",
          "name",
          "description",
          "attributes",
          "image"
        ],
        "xml": {
          "name": "AvatarMetadata"
        }
      },
      "ONSMetadata": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "ONS name"
          },
          "description": {
            "type": "string",
            "example": "Short ONS name description"
          },
          "attributes": {
            "type": "string",
            "example": "Custom traits about ONS"
          },
          "name_length": {
            "type": "string",
            "example": "Character length of ons name"
          },
          "url": {
            "type": "string",
            "example": "ONS App URL of the name"
          },
          "version": {
            "type": "string",
            "example": "ONS NFT version"
          },
          "background_image": {
            "type": "string",
            "example": "Origin URL of avatar image"
          },
          "image_url": {
            "type": "string",
            "example": "URL of ONS NFT image"
          }
        },
        "required": [
          "name",
          "description",
          "attributes",
          "name_length",
          "url",
          "version",
          "background_image",
          "image_url"
        ],
        "xml": {
          "name": "ONSMetadata"
        }
      },
      "contractAddress": {
        "type": "string",
        "example": "0x57f1887a8BF19b14fC0dF6Fd9B2acc9Af147eA85",
        "xml": {
          "name": "contractAddress"
        }
      },
      "onsName": {
        "type": "string",
        "example": "nick.op",
        "xml": {
          "name": "onsName"
        }
      },
      "tokenId": {
        "type": "string",
        "example": "4221908525551133525058944220830153...",
        "xml": {
          "name": "tokenId"
        }
      },
      "networkName": {
        "description": "Name of the chain to query for.",
        "type": "string",
        "enum": [
          "mainnet",
          "rinkeby",
          "ropsten",
          "goerli"
        ],
        "xml": {
          "name": "networkName"
        }
      }
    }
  }
}